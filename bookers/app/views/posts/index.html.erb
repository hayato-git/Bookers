<h1 class="headline">Books</h1>

<table>
	<thead>
		<tr>
			<th> Title </th>
			<th> Body </th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<%= @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= link_to "Show", post_path(post.id), class: 'show_#{id}' %></td>
			<td><%= link_to "Edit", edit_post_path(post.id), class: 'edit_#{id}' %></td>
			<td><%= link_to "Destroy", post_path(post.id), class: 'destroy_#{id}', method: :delete, date: { confirm:'Are you sure?'} %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<!--ここまで-->

<h2 class="headline">New Book</h2>

<%= form_for(@post) do |f| %>

	<h4 class="title">Title</h4>
	<%= f.text_field :title, class: 'book_title' %>

	<h4 class="body">Body</h4>
	<%= f.text_area :body %>
	<br><%= f.submit 'Create Book', class: 'book_body' %></br>

<% end %>